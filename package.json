{
  "name": "@sealsystems/tlscert",
  "version": "2.1.2",
  "description": "Provides TLS key and certificate",
  "author": {
    "name": "SEAL Systems AG",
    "email": "opensource@sealsystems.de",
    "url": "https://www.sealsystems.de"
  },
  "license": "MIT",
  "scripts": {
    "release": "semantic-release --branch ${CIRCLE_BRANCH}",
    "test": "roboter test",
    "coverage": "nyc --reporter=text --reporter=lcov mocha",
    "report": "npm run coverage && if [[ $OSTYPE == darwin* ]]; then open=open; else open=xdg-open; fi && $open coverage/lcov-report/index.html",
    "generate-cert": "bot generate-cert",
    "show-cert": "bot show-cert"
  },
  "main": "lib/tlscert.js",
  "dependencies": {
    "@sealsystems/log": "1.3.1",
    "lodash.clonedeep": "4.5.0",
    "nodeenv": "1.0.0",
    "processenv": "1.1.0"
  },
  "devDependencies": {
    "@sealsystems/eslint-config-es": "1.1.1",
    "assertthat": "2.0.0",
    "nyc": "13.1.0",
    "roboter": "3.0.3"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/sealsystems/node-tlscert.git"
  },
  "release": {
    "extends": "@sealsystems/semantic-release-config/node-module"
  },
  "publishConfig": {
    "access": "public"
  }
}
